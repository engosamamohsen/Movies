<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

<data>

  <variable
    name="category"
    type="app.fawry.task.domain.category.entity.Category" />


</data>

<androidx.constraintlayout.widget.ConstraintLayout
  android:layout_width="wrap_content"
  android:layout_margin="@dimen/dimen5"
  android:background="@drawable/border_circle_white"
  android:layout_height="wrap_content">

  <androidx.appcompat.widget.AppCompatTextView
    android:layout_width="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:text="@{category.name}"
    tools:text="Category Movie"
    app:layout_constraintEnd_toEndOf="parent"
    android:textSize="@dimen/text_size16"
    android:paddingStart="@dimen/dimen16"
    android:paddingEnd="@dimen/dimen16"
    android:paddingTop="@dimen/dimen5"
    android:paddingBottom="@dimen/dimen5"
    android:textColor="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>